page {
  color: #333333;
}
.page_box {
  box-sizing: border-box;
  width: 100%;
  padding: 10px 5px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
  background-color: rgba(199, 199, 254, 0.384);
}
.person_item {
  flex-shrink: 0;
  width: 48%;
  height: 240px;
  margin-bottom: 10px;
  background-color: #FFFFFF;
  border-radius: 5px;
  overflow: hidden;
}
.person_img {
  width: 100%;
  height: 180px;
}
.person_name {
  width: 100%;
  height: 60px;
}
.person_name_item1 {
  box-sizing: border-box;
  padding: 0 5px;
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.img_box {
  font-size: 14px;
}
.person_name_item2 {
  box-sizing: border-box;
  padding: 0 5px;
  width: 100%;
  height: 30px;
  font-size: 13px;
  letter-spacing: 1px;
  font-weight: 700;
  line-height: 30px;
}
/* tabs */
.van-tabs__line {
  background-color: #FFFFFF !important;
}
.van-tab--active {
  font-weight: 700 !important;
  color: #4545FF !important;
  font-size: 18px !important;
  letter-spacing: 2px !important;
}