.page_box {
  box-sizing: border-box;
  width: 100%;
  padding: 10px 5px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
  background-color: rgba(199, 199, 254, 0.384);
}
.person_item {
  flex-shrink: 0;
  width: 48%;
  height: 240px;
  margin-bottom: 10px;
  background-color: #FFFFFF;
  border-radius: 5px;
  overflow: hidden;
}
.person_img {
  width: 100%;
  height: 180px;
}
.person_name {
  width: 100%;
  height: 60px;
}
.person_name_item1 {
  box-sizing: border-box;
  padding: 0 5px;
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.person_name_item1_name {
  font-size: 16px;
  font-weight: 700;
  letter-spacing: 2px;
}
.person_name_item1_age {
  width: 31px;
  margin: 0px 5px;
  font-size: 12px;
  font-weight: 700;
  letter-spacing: 1px;
  color: #4545FF;
}
.img_box {
  font-size: 14px;
}
.person_name_item2 {
  box-sizing: border-box;
  padding: 0 5px;
  width: 100%;
  height: 30px;
  font-size: 12px;
  letter-spacing: 1px;
  line-height: 30px;
  color: #999999;
}
/* tabs */
.van-tabs__line {
  background-color: #FFFFFF !important;
}
.van-tab--active {
  font-weight: 700 !important;
  color: #4545FF !important;
  font-size: 18px !important;
  letter-spacing: 2px !important;
}

/* DropdownMenu 下拉菜单 */
.dropdown_cell {
  box-sizing: border-box;
  width: 100vw;
  padding: 0 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.dropdown_item_nomal {
  flex-shrink: 0;
  box-sizing: border-box;
  width: 28vw;
  height: 40px;
  margin: 10px 0;
  padding-left: 2px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333333;
  background-color: #F0F0F0;
  letter-spacing: 2px;
  border-radius: 5px;
  font-size: 14px;
}
.dropdown_item_active {
  font-weight: 700;
  color: #FFFFFF;
  background-color: #4545FF;
}

.goAddPage {
  position: fixed;
  right: 20px;
  bottom: 50px;
  z-index: 2;
  width: 50px;
  height: 50px;
  font-size: 20px;
  line-height: 50px;
  text-align: center;
  border-radius: 50%;
  color: #FFFFFF;
  background-color: #00000080;
  /* background: -webkit-linear-gradient(top, #A084F1, #CA85D6); */
}