<van-toast id="van-toast" />

<van-tabs active="{{scenicActive}}" bind:change="scenicChange">
  <van-tab title="全部"></van-tab>
  <van-tab title="东昌府"></van-tab>
  <van-tab title="茌平区"></van-tab>
  <van-tab title="临清市"></van-tab>
  <van-tab title="阳谷县"></van-tab>
  <van-tab title="东阿县"></van-tab>
  <van-tab title="高唐县"></van-tab>
  <van-tab title="冠县"></van-tab>
  <van-tab title="莘县"></van-tab>
</van-tabs>
<scroll-view class="bg_F5 bs_bb oy_a" scroll-y="true" style="height: {{windowHeight-44}}px;" bindscrolltolower="onScrollBottom">
  <view class="sub_module1_ns" wx:for="{{scenicspotList}}" wx:key="index" bindtap="scenicDetails" data-item="{{item}}" >
    <view class="sub_module1_item_ns">
      <image src="{{item.scenicspot_img}}" class="w_h_100"></image>
    </view>
    <view class="sub_module1_item_ns_info fx_c_s_s" style="width: {{windowWidth-90}}px;">
      <view class="sub_module1_item_ns_info_item fx_r_b_c">
        <text class="to_1 fs_16">{{item.scenicspot_name}}</text>
        <text class="sub_module1_item_ns_info_item_per sub_module1_item_ns_info_item_bg_a fs_12 fw_7">第{{item.id}}名</text>
      </view>
      <view class="sub_module1_item_ns_info_item fx_r_s_c">
        <text class="to_1 fs_12 co_9 fx_r_s_c w_100">{{item.scenicspot_place}}</text>
      </view>
    </view>
  </view>
</scroll-view>