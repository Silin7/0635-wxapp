.page_box {
  box-sizing: border-box;
  width: 100vw;
  overflow-y: auto;
  background-color: #F7F8FA;
  color: #333333;
}
/* 发起人简介 */
.sponsor_box {
  box-sizing: border-box;
  height: 100px;
  padding: 10px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #FFFFFF;
}
.sponsor_left {
  box-sizing: border-box;
  width: 80px;
  height: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.sponsor_right {
  box-sizing: border-box;
  width: 200px;
  height: 80px;
  margin-left: 20px;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  align-items: flex-start;
}
.sponsor_name {
  width: 100%;
  height: 40px;
  font-size: 18px;
  font-weight: 700;
  line-height: 40px;
  letter-spacing: 2px;
}
.sponsor_info {
  width: 200px;
  height: 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  font-weight: 700;
  color: #333333;
}
.sponsor_wximg {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}
.sponsor_wx {
  width: 120px;
  height: 36px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  font-weight: 700;
  letter-spacing: 2px;
  border: 1px solid #E9E9E9;
  border-radius: 20px;
}
/* 活动简介 */
.appointment_box {
  box-sizing: border-box;
  padding: 10px;
  margin-top: 10px;
  border: 1px solid red;
  background-color: #FFFFFF;
}
.appointment_title {
  width: 100%;
  height: 40px;
  font-size: 20px;
  font-weight: 700;
  line-height: 40px;
  letter-spacing: 2px;
}
.appointment_tag_box {
  height: 40px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.appointment_tag_item {
  margin-right: 10px;
  border-radius: 5px;
}
.appointment_tag_text {
  height: 25px;
  line-height: 25px;
  margin: 0 10px;
  color: #FFFFFF;
  font-size: 12px;
  font-weight: 700;
  letter-spacing: 3px;
}