.item_box {
  box-sizing: border-box;
  width: 100%;
  height: 200px;
  margin: 10px 0;
  padding: 10px 0;
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* 发起人信息 */
.sponsor_box {
  width: 120px;
  height: 170px;
  display: flex;
  flex-flow: column;
  justify-content: space-around;
  align-items: center;
  margin-top: 10px;
}
.sponsor_img {
  width: 80px;
  height: 100px;
  border-radius: 5px;
  overflow: hidden;
}
.sponsor_name {
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  letter-spacing: 1px;
}
.plate_box {
  width: 120px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.gender_boy {
  height: 18px;
  padding: 0px 3px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #A084F1;
  border-radius: 9px;
}
.gender_girl {
  height: 18px;
  padding: 0px 3px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #CA85D6;
  border-radius: 9px;
}
.gender_icon {
  width: 14px;
  height: 14px;
}
.age_text {
  font-size: 12px;
  margin-left: 3px;
  color: #FFFFFF;
}
.appointment_type {
  margin-left: 10px;
  font-size: 12px;
  font-weight: 700;
  letter-spacing: 1px;
  color: #444444;
}

/* 约会信息 */
.appointment_box {
  box-sizing: border-box;
  height: 180px;
  padding-left: 10px;
  border-left: 1rpx dashed #cccccc;
}
.appointment_title {
  height: 40px;
  line-height: 40px;
  font-size: 20px;
  font-weight: 700;
  letter-spacing: 1px;
}
.appointment_item {
  height: 30px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  letter-spacing: 1px;
}
.appointment_item2 {
  height: 50px;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  letter-spacing: 1px;
  line-height: 25px;
}
.appointment_img {
  width: 16px;
  height: 16px;
}
.appointment_text {
  margin-left: 10px;
  font-size: 14px;
  letter-spacing: 2px;
  color: #333333;
}



/* 导航栏 */
.van-tabs__line {
  background-color: #FFFFFF !important;
}
.van-tab--active {
  font-weight: 700 !important;
  color: #4545FF !important;
  font-size: 16px !important;
  letter-spacing: 2px !important;
}