<van-toast id="van-toast" />
<van-tabs active="{{tabActive}}" bind:change="tabChange" color="#4545FF">
  <van-tab title="同城"></van-tab>
  <van-tab title="新闻"></van-tab>
</van-tabs>

<!-- 同城 -->
<scroll-view wx:if="{{tabActive === 0}}" scroll-y="true" bindscrolltolower="onScrollBottom1" class="dynamic_box m_t_10" style="height: {{windowHeight-54}}px;">
  <view class="dynamic_item" wx:for="{{dynamicList}}" wx:key="index" bindtap="getDynamicDetalis" data-item="{{item}}">
    <!-- 标签 -->
    <van-tag color="#4545FF" plain class="dynamic_tag" size="large"> 标 签 </van-tag>
    <!-- 作者信息 -->
    <view class="dynamic_user_info">
      <image src="{{item.author_avatar_url}}" class="dynamic_user_img"></image>
      <view class="dynamic_user_box">
        <view class="dynamic_user_name to_1">
          <text class="ls_1">{{item.author_name}}</text>
          <!-- <wxs module="filter" src="../../../utils/filter.wxs"></wxs>
          <text class="dynamic_user_id">{{filter.licensePlate(item.author_id)}}</text> -->
        </view>
        <view class="dynamic_user_date">{{item.create_time}}</view>
      </view>
    </view>
    <!-- 动态内容 -->
    <view class="dynamic_rich_text">
      <rich-text nodes="{{item.content}}"></rich-text>
    </view>
    <!-- 动态图片 -->
    <view wx:if="{{item.image}}" catchtap="dynamicImg" data-item="{{item}}">
      <image src="{{item.image}}" class="dynamic_img"></image>
    </view>
  </view>
</scroll-view>

<!-- 新闻 -->
<view class="bs_bb bg_F7 fx_r_b_s m_t_10" style="height: {{windowHeight-54}}px;" wx:if="{{tabActive === 1}}">
  <view class="sidebar_box" style="height: {{windowHeight-54}}px;">
    <van-sidebar active-key="{{sidebarKey}}" bind:change="sidebarChange">
      <van-sidebar-item wx:for="{{newsTypeList}}" wx:key="index" title="{{item.type_name}}"/>
    </van-sidebar>
  </view>
  <scroll-view scroll-y="true" bindscrolltolower="onScrollBottom2" class="sidebar_item_box" style="width: {{windowWidth-80}}px; height: {{windowHeight-54}}px;">
    <view wx:for="{{newsList}}" wx:key="index" class="find_news" bindtap="getNewsDetalis" data-item="{{item}}">
      <view class="find_news_img">
        <image wx:if="{{item.imgList[0]}}" src="{{item.imgList[0]}}" class="w_h_100"></image>
        <image wx:else src="/images/homeModule/banner_xq.jpg" class="w_h_100"></image>
      </view>
      <view style="width: {{windowWidth-150}}px;">
        <view class="find_news_title to_2">{{item.title}}</view>
        <text class="find_news_time">{{item.postTime}}</text>
      </view>
    </view>
  </scroll-view>
</view>