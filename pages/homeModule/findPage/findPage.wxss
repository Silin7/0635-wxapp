/* 动态 */
.dynamic_box {
  box-sizing: border-box;
  width: 100%;
  background-color: #F7F8FA;
}
.dynamic_item {
  box-sizing: border-box;
  width: 100%;
  min-height: 100px;
  margin: 0px 0px 10px 0px;
  padding: 10px;
  background-color: #FFFFFF;
  position: relative;
}
.dynamic_tag {
  box-sizing: border-box;
  width: 80px;
  height: 25px;
  padding-left: 3px;
  margin-right: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  letter-spacing: 3px;
  border-radius: 5px;
  color: #FFFFFF;
  background-color: #4545FF;
}
.dynamic_user_info {
  box-sizing: border-box;
  width: 100%;
  height: 60px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}
.dynamic_user_img {
  width: 50px;
  height: 50px;
  border-radius: 10px;
}
.dynamic_user_box {
  width: 100%;
  height: 60px;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  align-self: flex-start;
}
.dynamic_user_name {
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  font-weight: 700;
  margin-left: 10px;
}
.dynamic_user_date {
  box-sizing: border-box;
  width: 100%;
  height: 30px;
  padding: 0 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.license_plate {
  box-sizing: border-box;
  height: 25px;
  width: 80px;
  margin-right: 10px;
  padding-left: 1[];
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  border-radius: 5px;
  letter-spacing: 1px;
  color: #FFFFFF;
  background-color: #4545FF;
}
.create_time {
  margin-left: 10px;
  font-size: 12px;
  color: #666666;
}

.dynamic_rich_text {
  margin-top: 10px;
  line-height: 30px;
  font-size: 14px;
  letter-spacing: 1px;
  color: #333333;
}
.dynamic_img {
  width: 100%;
  height: 200px;
}

/* 新闻 */
.sidebar_item_box {
  flex-shrink: 0;
  box-sizing: border-box;
  overflow-y: auto;
  padding: 0 5px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #FFFFFF;
}
.find_news {
  box-sizing: border-box;
  padding: 10px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx dashed #F1F1F1;
}
.find_news_img {
  width: 50px;
  height: 50px;
  border-radius: 5px;
  overflow: hidden;
}
.find_news_title {
  height: 40px;
  line-height: 20px;
  font-weight: 700;
  letter-spacing: 1px;
  margin-bottom: 5px;
  font-size: 14px;
  color: #333333;
}
.find_news_time {
  width: 100%;
  height: 12px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 12px;
  font-weight: normal;
  color: #999999;
}
#container {
  position: relative;
}
.go_top {
  position: fixed;
  bottom: 80px;
  right: 20px;
  z-index: 2;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: #00000080;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top_img {
  width: 32px;
  height: 32px;
  margin-top: 3px;
}

/* 侧边栏 */
.van-sidebar-item--selected {
  border-color: var(--sidebar-selected-border-color,#F7F8FA) !important;
  /* border-color: var(--sidebar-selected-border-color,#4545FF) !important; */
}
.van-sidebar-item {
  background-color: #F7F8FA !important;
  padding: var(--sidebar-padding,16px 12px 16px 8px) !important;
}
.van-sidebar-item--selected {
  background-color: #FFFFFF !important;
  color: #4545FF !important;
  font-weight: 700 !important;
  font-size: 16px !important;
  letter-spacing: 2px !important;
}
/* tag */
.van-tag--mark {
  border-radius: var(--tag-round-border-radius,999px) 0 0 var(--tag-round-border-radius,999px) !important;
  letter-spacing: 2px !important;
}

.goAddPage {
  position: fixed;
  right: 20px;
  bottom: 20px;
  z-index: 2;
  width: 50px;
  height: 50px;
  font-size: 20px;
  line-height: 50px;
  text-align: center;
  border-radius: 50%;
  color: #FFFFFF;
  background: -webkit-linear-gradient(top, #A084F1, #CA85D6);
}