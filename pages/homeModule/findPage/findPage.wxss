.sidebar_item_box {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  flex-shrink: 0;
}
.find_news {
  box-sizing: border-box;
  padding: 10px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx dashed #F1F1F1;
}
.find_news_img {
  width: 50px;
  height: 50px;
  border-radius: 5px;
  overflow: hidden;
}
.find_news_title {
  height: 40px;
  line-height: 20px;
  font-weight: 700;
  letter-spacing: 1px;
  margin-bottom: 5px;
  font-size: 14px;
  color: #333333;
}
.find_news_time {
  width: 100%;
  height: 12px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 12px;
  font-weight: normal;
  color: #999999;
}

/* 侧边栏 */
.van-sidebar-item--selected {
  border-color: var(--sidebar-selected-border-color,#F7F8FA) !important;
  /* border-color: var(--sidebar-selected-border-color,#4545FF) !important; */
}
.van-sidebar-item {
  background-color: #F7F8FA !important;
}
.van-sidebar-item--selected {
  background-color: #FFFFFF !important;
  color: #4545FF !important;
  font-weight: 700 !important;
  font-size: 16px !important;
  letter-spacing: 2px !important;
}
  