/* 景点 / 历史 / 特产 / 相亲 */
.icon_module {
  box-sizing: border-box;
  height: 100px;
  width: 100%;
  margin-top: 10px;
  padding: 0px 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.icon_module_item {
  box-sizing: border-box;
  height: 100px;
  width: 20vw;
  display: flex;
  flex-flow: column;
  justify-content: space-around;
  align-items: center;
}
.item_icon {
  width: 70px;
  height: 70px;
  border-radius: 35px;
  overflow: hidden;
}
.item_icon_img {
  width: 100%;
  height: 100%;
}
.item_text {
  box-sizing: border-box;
  height: 20px;
  width: 100%;
  /* display: flex;
  justify-content: center;
  align-items: center; */
  font-size: 14px;
  line-height: 20px;
  text-align: center;
  letter-spacing: 2px;
  padding-left: 2px;
}

/* 活动 */
.title_box {
  box-sizing: border-box;
  height: 30px;
  padding: 0 10px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.title_icon_box {
  width: 24px;
  height: 24px;
}
.title_text {
  font-size: 14px;
  font-weight: 700;
  letter-spacing: 2px;
  margin-left: 10px;
}

/* 头像 / 壁纸 */
.sub_module1 {
  padding: 10px;
  display: flex;
  justify-content: space-between;
}
.sub_module1_item {
  width: 31%;
  height: 120px;
  box-sizing: border-box;
  border-radius: 5px;
  overflow: hidden;
  position: relative;
}
.item_banner_mask {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: #000000;
  opacity: 0.3;
}
.item_banner_text1 {
  position: absolute;
  bottom: 35px;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 30px;
  line-height: 30px;
  color: #FFFFFF;
  font-size: 14px;
  text-align: center;
  letter-spacing: 8px;
}

