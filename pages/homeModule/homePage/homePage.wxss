.title_box {
  box-sizing: border-box;
  height: 30px;
  padding: 0 10px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.title_icon_box {
  width: 24px;
  height: 24px;
}
.title_text {
  font-size: 14px;
  font-weight: 700;
  letter-spacing: 2px;
  margin-left: 10px;
}

/* 子模块01 */
.icon_module {
  height: 100px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0px 10px;
}
.icon_module_item {
  box-sizing: border-box;
  height: 100px;
  width: 20vw;
  display: flex;
  flex-flow: column;
  justify-content: space-around;
  align-items: center;
}
.item_icon {
  width: 70px;
  height: 70px;
  border-radius: 35px;
  overflow: hidden;
}
.item_icon_img {
  width: 100%;
  height: 100%;
}
.item_text {
  height: 20px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

/* 子模块02 */
.sub_module1 {
  padding: 10px;
  display: flex;
  justify-content: space-around;
}
.sub_module1_item {
  width: 31%;
  height: 120px;
  box-sizing: border-box;
  border-radius: 10px;
  overflow: hidden;
  position: relative;
}
.item_banner_mask {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: #000000;
  opacity: 0.3;
}
.item_banner_text1 {
  position: absolute;
  bottom: 35px;
  right: 0;
  z-index: 999;
  width: 100%;
  height: 30px;
  line-height: 30px;
  color: #FFFFFF;
  font-size: 16px;
  font-weight: 700;
  text-align: center;
  letter-spacing: 8px;
}

