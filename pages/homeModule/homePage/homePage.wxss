
.icon_module {
  height: 100px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0px 10px;
}
.icon_module_item {
  box-sizing: border-box;
  height: 80px;
  width: 20vw;
  display: flex;
  flex-flow: column;
  justify-content: space-around;
  align-items: center;
}
.item_icon {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  overflow: hidden;
}
.item_icon_img {
  width: 100%;
  height: 100%;
}
.item_text {
  height: 20px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.sub_module {
  padding: 10px;
  display: flex;
  justify-content: space-between;
}
.sub_module_left {
  width: 48%;
}
.sub_module_right {
  width: 48%;
}
.sub_module_01 {
  width: 100%;
  height: 160px;
  border: 1px solid seagreen;
  border-radius: 10px;
}
.sub_module_02 {
  width: 100%;
  height: 240px;
  border: 1px solid chartreuse;
  border-radius: 10px;
}
  

/* 底部导航 */
.van-tabbar-item--active {
  color: #4545FF!important;
}
.van-tabbar-item__text {
  font-size: 12px;
  font-weight: 700 !important;
}