<van-toast id="van-toast" />
<!-- {{msg}} -->
<van-search
  placeholder="请输入搜索关键词"
  value="{{rubbishName}}"
  use-action-slot
  shape="round"
  background="#CA85D6"
  bind:change="onChange">
  <view slot="action" bind:tap="getRubbish">搜索</view>
</van-search>
<view wx:if="{{flag}}">
  <view class="garbage_zhu" wx:if="{{aim}}">
    <view>{{aim.goodsName}}是{{aim.goodsType}}哟(＾Ｕ＾)~ＹＯ</view>
    <view></view>
  </view>
  <view  wx:if="{{recommendList.length > 0}}">
    <view class="ab_garbage">相关分类</view>
    <view class="garbage_ci" wx:for="{{recommendList}}" wx:key="index">
      <view>{{item.goodsName}}是{{item.goodsType}}哟(๑‾ ꇴ ‾๑)</view>
    </view>
  </view>
</view>
<view wx:else>{{msg}}</view>

