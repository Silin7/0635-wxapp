.jokes_item {
  box-sizing: border-box;
  width: 98vw;
  padding: 10px;
  border-radius: 5px;
  margin: 10px auto;
  line-height: 28px;
  letter-spacing: 2px;
  font-weight: 700;
  border: 1px dashed #4545FF;
}

/* 按钮 */
.refresh_box {
  margin-top: 10px;
  box-sizing: border-box;
  height: 80px;
  padding: 0px 0px 10px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.refresh_btn {
  height: 40px;
  width: 180px;
  padding-left: 10px;
  letter-spacing: 10px;
  background-color: #4545FF;
  color: #FFFFFF;
  font-size: 18px;
  font-weight: 700;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
}