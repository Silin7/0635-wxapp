.van-button--active {
  color: #4545FF !important;
}
.refresh_box {
  margin-top: 10px;
  box-sizing: border-box;
  height: 80px;
  padding: 0px 0px 10px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.refresh_btn {
  height: 60px;
  width: 180px;
  padding-left: 10px;
  letter-spacing: 10px;
  background-color: #4545FF;
  color: #FFFFFF;
  font-size: 18px;
  font-weight: 700;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}