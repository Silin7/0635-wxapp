.scroll_box {
  box-sizing: border-box;
  padding: 0 10px;
  background-color: #FFFFFF;
}
.series_name {
  font-size: 20px;
  font-weight: 700;
  line-height: 30px;
  margin-bottom: 10px;
  letter-spacing: 1px;
  color: #333333;
}
.scroll_item {
  box-sizing: border-box;
  padding: 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.series_image {
  flex-shrink: 0;
  width: 120px;
  height: 120px;
  margin: 15px;
  border-radius: 5px;
  overflow: hidden;
}

/* 图片 */
.transition_box {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.transition_img {
  width: 15px;
  height: 15px;
}
.content_box {
  box-sizing: border-box;
  padding: 5px;
  margin: 10px 0;
  /* border: 2px dashed #DEDEDE; */
}
.story_title {
  min-height: 40px;
  line-height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  letter-spacing: 2px;
  text-align: center;
  color: #333333;
}
.story_url {
  display: inline-block;
  width: 100%;
  height: 300px;
}