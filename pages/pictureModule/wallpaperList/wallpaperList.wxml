<van-toast id="van-toast" />

<scroll-view scroll-y="true" bindscrolltolower="onScrollBottom" class="scroll_box" style="height: {{windowHeight}}px;">
  <view class="series_name">{{series_name}}</view>
  <view class="scroll_item" >
    <view class="series_image" wx:for="{{seriesList}}" wx:key="index" bindtap="savePicture" data-img="{{item.wallpaper_url}}">
      <van-image lazy-load width="100%" height="100%" src="{{item.wallpaper_url}}"/>
    </view>
  </view>
</scroll-view>