.scroll_box {
  box-sizing: border-box;
  padding: 0 10px;
  background-color: #FFFFFF;
}
.series_name {
  font-size: 20px;
  font-weight: 700;
  line-height: 30px;
  margin-bottom: 10px;
  letter-spacing: 1px;
  color: #333333;
}
.scroll_item {
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.series_image {
  flex-shrink: 0;
  width: 48%;
  height: 320px;
  margin-bottom: 15px;
  border-radius: 5px;
  overflow: hidden;
}