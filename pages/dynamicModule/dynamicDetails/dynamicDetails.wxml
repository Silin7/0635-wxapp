<van-toast id="van-toast" />

<!-- 动态详情 -->
<view class="bg_F5 bs_bb oy_a p_b_10" style="height: {{windowHeight-80}}px;">
  <!-- 作者信息 -->
  <view class="author_box fx_r_s_c">
    <view class="author_img_box">
      <image src="{{authorData.author_avatarUrl}}" class="w_h_100"></image>
    </view>
    <view class="news_date fs_14 m_l_10" style="width: {{windowWidth-100}}px;">
      <text class="to_1 fw_7">{{authorData.author_name}}</text>
      <text class="to_1 co_9 fs_12">{{authorData.create_time}}</text>
    </view>
  </view>
  <!-- 动态文本 -->
  <view class="sub_module1 ">
    <view class="sub_module1_item_ns_info fx_c_s_s" style="width: {{windowWidth-20}}px;">
      <rich-text nodes="{{dynamic_details}}"></rich-text>
    </view>
  </view>
</view>

<!-- 底部按钮 -->
<view class="social_contact_btns">
  <view class="social_contact_btn social_contact_btn_bg_01">推自己</view>
  <view class="social_contact_btn social_contact_btn_bg_02">要微信</view>
</view>