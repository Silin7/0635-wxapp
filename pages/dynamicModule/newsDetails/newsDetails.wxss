.news_title {
  box-sizing: border-box;
  padding: 0 5px;
  display: flex;
  justify-content: center;
  font-size: 18px;
  font-weight: 700;
  line-height: 30px;
  letter-spacing: 1px;
}

.news_info {
  box-sizing: border-box;
  width: 100%;
  padding: 10px;
  line-height: 30px;
  letter-spacing: 2px;
  color: #333333;
}