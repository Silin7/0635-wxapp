.page_box {
  min-height: calc(100vh - 80px);
  background-color: #F7F8FA;
  padding-bottom: 80px;
  position: relative;
}
.dynamic_details {
  padding: 10px;
  background-color: #FFFFFF;
  border-radius: 0 0 20px 20px;
}
.author_indo {
  width: 100%;
  height: 60px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.avatar_img {
  border-radius: 30px;
}
.user_box {
  height: 60px;
}
.nick_name_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.nick_name {
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  font-weight: 700;
  letter-spacing: 2px;
}
.follow {
  box-sizing: border-box;
  width: 60px;
  height: 25px;
  line-height: 25px;
  text-align: center;
  padding-left: 5px;
  letter-spacing: 5px;
  color: #FFFFFF;
  background-color: #4545FF;
  font-size: 14px;
  font-weight: 700;
  border-radius: 5px;
}
.user_info {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  letter-spacing: 2px;
  font-size: 12px;
  color: #999999;
}
.dynamic_info {
  margin-top: 10px;
}
.dynamic_content {
  font-size: 14px;
  color: #333333;
  letter-spacing: 2px;
  line-height: 25px;
}
.dynamic_image {
  width: 100%;
  margin-top: 5px;
}
/* 分享 */
.share {
  box-sizing: border-box;
  width: 100%;
  height: 30px;
  margin-top: 10px;
  padding-right: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.share_left {
  height: 30px;
  display: flex;
  align-items: center;
  font-size: 12px;
  letter-spacing: 1px;
  color: #999999;
}
.share_right {
  height: 30px;
  display: flex;
  align-items: center;
}
.share_active {
  position: absolute;
  right: 20px;
  z-index: 2;
  width: 40px !important;
  height: 30px;
  background-color: red;
  opacity: 0;
}
.share_comment {
  margin-right: 20px;
  font-size: 12px;
  letter-spacing: 5px;
  color: #333333;
  display: flex;
  justify-content: center;
  align-items: center;
}
.share_comment_text {
  font-weight: 700;
}
.share_forward {
  margin-right: 10px;
  font-size: 12px;
  letter-spacing: 5px;
  color: #333333;
  display: flex;
  justify-content: center;
  align-items: center;
}
.zf_icon {
  width: 12px;
  height: 12px;
}
/*  */
.dynamic_comment {
  width: 100%;
  margin-top: 20px;
}
.comment_item {
  margin-bottom: 10px;
  padding: 10px;
  background-color: #FFFFFF;
}
.comment_user {
  height: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.reviewer_name {
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  font-weight: 700;
  letter-spacing: 2px;
  color: #333333;
}
.comment_content {
  margin-top: 5px;
  font-size: 12px;
  color: #555555;
  letter-spacing: 2px;
  line-height: 25px;
  padding-left: 30px;
}
/* btm_box */
.btm_box {
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  z-index: 2;
  width: 100vw;
  height: 80px;
  padding: 10px;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background-color: #F7F8FA;
}
.btm_box_left {
  height: 60px;
}
.btm_box_right {
  box-sizing: border-box;
  width: 60px;
  height: 45px;
  padding-left: 5px;
  background-color: #4545FF;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 5px;
  font-size: 14px;
  font-weight: 700;
}