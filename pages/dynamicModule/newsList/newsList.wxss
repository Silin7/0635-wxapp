/* 动态 */
.dynamic_box {
  box-sizing: border-box;
  width: 100%;
  background-color: #F7F8FA;
}
.dynamic_item {
  box-sizing: border-box;
  width: 100%;
  min-height: 100px;
  margin: 10px 0;
  padding: 10px;
  background-color: #FFFFFF;
  position: relative;
}
.dynamic_tag {
  position: absolute;
  top: 10px;
  right: 10px;
}
.dynamic_user_info {
  box-sizing: border-box;
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}
.dynamic_user_img {
  width: 50px;
  height: 50px;
  border-radius: 10px;
}
.dynamic_user_box {
  height: 50px;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  align-self: flex-start;
}
.dynamic_user_date {
  height: 20px;
  display: flex;
  align-items: center;
  font-size: 12px;
  margin-left: 10px;
  color: #666666;
}
.dynamic_user_name {
  height: 30px;
  display: flex;
  align-items: center;
  font-size: 16px;
  font-weight: 700;
  margin-left: 10px;
}
.dynamic_user_id {
  height: 25px;
  width: 90px;
  margin-left: 10px;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  font-weight: 700;
  letter-spacing: 2px;
  color: #FFFFFF;
  /* background: -webkit-linear-gradient(left, #A084F1, #CA85D6); */
  background: #4545FF;
}

.dynamic_rich_text {
  margin-top: 10px;
  line-height: 30px;
  font-size: 14px;
  letter-spacing: 1px;
  color: #333333;
}
.dynamic_img {
  width: 100%;
  height: 200px;
}

/* 新闻 */
.sidebar_item_box {
  flex-shrink: 0;
  box-sizing: border-box;
  overflow-y: auto;
  padding: 0 5px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #FFFFFF;
}
.find_news {
  box-sizing: border-box;
  padding: 10px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx dashed #F1F1F1;
}
.find_news_img {
  width: 50px;
  height: 50px;
  border-radius: 5px;
  overflow: hidden;
}
.find_news_title {
  height: 40px;
  line-height: 20px;
  font-weight: 700;
  letter-spacing: 1px;
  margin-bottom: 5px;
  font-size: 14px;
  color: #333333;
}
.find_news_time {
  width: 100%;
  height: 12px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 12px;
  font-weight: normal;
  color: #999999;
}

/* 侧边栏 */
.van-sidebar-item--selected {
  border-color: var(--sidebar-selected-border-color,#F7F8FA) !important;
  /* border-color: var(--sidebar-selected-border-color,#4545FF) !important; */
}
.van-sidebar-item {
  background-color: #F7F8FA !important;
  /* padding: var(--sidebar-padding,16px 12px 16px 8px) !important; */
}
.van-sidebar-item--selected {
  background-color: #FFFFFF !important;
  color: #4545FF !important;
  font-weight: 700 !important;
  font-size: 16px !important;
  letter-spacing: 2px !important;
}
/* tag */
.van-tag--mark {
  border-radius: var(--tag-round-border-radius,999px) 0 0 var(--tag-round-border-radius,999px) !important;
  letter-spacing: 2px !important;
}