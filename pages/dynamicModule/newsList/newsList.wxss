/* 新闻 */
.sidebar_item_box {
  flex-shrink: 0;
  box-sizing: border-box;
  overflow-y: auto;
  padding: 0 5px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #FFFFFF;
}
.find_news {
  box-sizing: border-box;
  padding: 10px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx dashed #F1F1F1;
}
.find_news_img {
  width: 50px;
  height: 50px;
  border-radius: 5px;
  overflow: hidden;
}
.find_news_title {
  height: 40px;
  line-height: 20px;
  font-weight: 700;
  letter-spacing: 1px;
  margin-bottom: 5px;
  font-size: 14px;
  color: #333333;
}
.find_news_time {
  width: 100%;
  height: 12px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 12px;
  font-weight: normal;
  color: #999999;
}

/* DropdownMenu 下拉菜单 */
.dropdown_cell {
  box-sizing: border-box;
  width: 100vw;
  padding: 0 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.dropdown_item_nomal {
  flex-shrink: 0;
  box-sizing: border-box;
  width: 28vw;
  height: 40px;
  margin: 10px 0;
  padding-left: 2px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333333;
  background-color: #F0F0F0;
  letter-spacing: 2px;
  border-radius: 5px;
  font-size: 14px;
}
.dropdown_item_active {
  font-weight: 700;
  color: #FFFFFF;
  background-color: #4545FF;
}