  box-sizing: border-box;
  width: 100%;
  height: 200px;
  margin: 10px 0;
  padding: 10px;
  /* display: flex;
  justify-content: space-between;
  align-items: center; */
  border: 1px solid red;
  background-color: #FFFFFF;
}

/* 导航栏 */
.van-tabs__line {
  background-color: #FFFFFF !important;
}
.van-tab--active {
  font-weight: 700 !important;
  color: #4545FF !important;
  font-size: 16px !important;
  letter-spacing: 2px !important;
}


/* DropdownMenu 下拉菜单 */
.dropdown_cell {
  box-sizing: border-box;
  width: 100vw;
  padding: 0 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.dropdown_item_nomal {
  flex-shrink: 0;
  box-sizing: border-box;
  width: 28vw;
  height: 40px;
  margin: 10px 0;
  padding-left: 2px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333333;
  background-color: #F0F0F0;
  letter-spacing: 2px;
  border-radius: 5px;
  font-size: 14px;
}
.dropdown_item_active {
  font-weight: 700;
  color: #FFFFFF;
  background-color: #4545FF;
}

.goAddPage {
  position: fixed;
  right: 20px;
  bottom: 50px;
  z-index: 2;
  width: 50px;
  height: 50px;
  font-size: 20px;
  line-height: 50px;
  text-align: center;
  border-radius: 50%;
  color: #FFFFFF;
  background-color: #00000080;
  /* background: -webkit-linear-gradient(top, #A084F1, #CA85D6); */
}