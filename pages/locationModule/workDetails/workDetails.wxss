.bigBox {
  box-sizing: border-box;
  overflow: auto;
  background-color: #F7F8FA;
}
.basic_box {
  box-sizing: border-box;
  background-color: #FFFFFF;
  margin-bottom: 10px;
  padding: 10px;
}
.basic_title {
  min-height: 40px;
  line-height: 30px;
  font-size: 20px;
  font-weight: 700;
  letter-spacing: 1px;
}
.basic_item {
  margin-top: 10px;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.basic_label {
  width: 80px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #333333;
}
.basic_value {
  width: calc(100vw - 100px);
  line-height: 30px;
  font-size: 16px;
  letter-spacing: 1px;
}
.basic_value2 {
  box-sizing: border-box;
  width: 100%;
  font-size: 16px;
  line-height: 30px;
  letter-spacing: 1px;
  color: #333;
}

/* 底部按钮 */
button{
  line-height: 1;
  padding: 0 !important;
  margin:0;
}
button::after{
  border:none;
}
input{
  outline:none;
  border:none;
  list-style: none;
}
button[size='mini'] {
  font-size: 12px !important;
  font-weight: 700 !important;
}
.share_active {
  position: absolute;
  z-index: 2;
  width: 60px !important;
  height: 60px;
  background-color: red;
  opacity: 0;
}
.btn_box {
  box-sizing: border-box;
  height: 80px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px 10px;
}
.btn_box_item1 {
  width: 50%;
  height: 60px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}
.btn_gz {
  width: 40%;
  height: 60px;
  display: flex;
  flex-flow: column;
  justify-content: space-around;
  align-items: center;
}
.btn_wx {
  width: 40%;
  height: 60px;
  display: flex;
  flex-flow: column;
  justify-content: space-around;
  align-items: center;
  margin-left: 10px;
}
.btn_text {
  font-size: 12px;
  font-weight: 700;
  letter-spacing: 2px;
  color: #999999;
}
.btn_kf {
  width: 48%;
  height: 60px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.kf_btn {
  width: 80%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  letter-spacing: 5px;
  border-radius: 22px;
  font-weight: bold;
  color: #FFFFFF;
  background:  #D58BBC;
}
button {
  padding: 0 !important;
}
.van-button__text {
  color: #4545FF !important;
}