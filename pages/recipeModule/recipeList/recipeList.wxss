.sidebar_box {
  border-right: 1rpx solid #F0F0F0;
}
.sidebar_item_box {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  flex-shrink: 0;
  padding-top: 20px;
}
.recipe_item_title {
  width: 100%;
}
.recipe_item_title_name {
  height: 40px;
  line-height: 40px;
  font-weight: 700;
  color: #4545FF;
}
.recipe_item {
  width: 33%;
  margin-bottom: 20px;
  border-radius: 10px;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
}
.recipe_item_image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
}
.recipe_item_name {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
}


/* 侧边栏 */
.van-sidebar-item--selected {
  border-color: var(--sidebar-selected-border-color,#4545FF) !important;
}
.van-sidebar-item {
  background-color: #F7F8FA !important;
}
  