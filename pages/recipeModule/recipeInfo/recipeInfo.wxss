.recipe_box {
  box-sizing: border-box;
  background-color: #F7F8FA;
  padding: 10px;
}
.recipe_item {
  box-sizing: border-box;
  width: 100%;
  margin: 0px auto 10px;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  align-items: center; 
  background-color: #FFFFFF;
  border-radius: 5px 5px 0 0;
  overflow: hidden;
}
.recipe_title {
  box-sizing: border-box;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 14px;
  font-weight: 700;
  color: #333333;
  letter-spacing: 2px;
  background-color: #FFFFFF;
}