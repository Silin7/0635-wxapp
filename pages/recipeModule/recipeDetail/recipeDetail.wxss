.page_banner {
  width: 100vw;
  height: 260px;
  position: relative;
}
.header_box {
  box-sizing: border-box;
  position: absolute;
  top: 220px;
  width: 100vw;
}
.recipeDetail_name {
  box-sizing: border-box;
  height: 40px;
  line-height: 40px;
  font-size: 24px;
  font-weight: 700;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.recipeDetail_collection {
  box-sizing: border-box;
  padding-left: 5px;
  height: 30px;
  width: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: -webkit-linear-gradient(left, #A084F1, #CA85D6);
  letter-spacing: 5px;
  color: #FFFFFF;
  font-size: 14px;
  border-radius: 10px;
}
.recipeDetail_info {
  height: 30px;
}
.header_box {
  background-color: #FFFFFF;
}
.menu_nz {
  width: 28px;
  height: 28px;
}

/* 食材 */
.major_box {
  margin-top: 70px;
  background-color: #FFFFFF;
  border: 1px solid gray;
}

/* 步骤 */
.step_box {
  margin-top: 10px;
  background-color: #FFFFFF;
  border: 1px solid red;
}
.box_title {
  height: 40px;
  line-height: 40px;
  color: #4545FF;
  font-size: 16px;
  font-weight: 700;
  letter-spacing: 3px;
}
.step_title {
  line-height: 30px;
  margin: 20px 0 5px;
  letter-spacing: 1px;
  font-weight: 700;
  font-size: 16px;
}
.img_box {
  width: 100%;
  height: 200px;
}