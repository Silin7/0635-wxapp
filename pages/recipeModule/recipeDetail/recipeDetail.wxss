.page_banner {
  width: 100vw;
  height: 260px;
}
.header_box {
  box-sizing: border-box;
  width: 100%;
  height: 100px;
  padding: 10px;
  background-color: #FFFFFF;
}
.recipeDetail_name_box {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.recipeDetail_name {
  box-sizing: border-box;
  height: 40px;
  line-height: 40px;
  font-size: 24px;
  font-weight: 700;
  letter-spacing: 2px;
  color: #111111;
}
.recipeDetail_collection {
  box-sizing: border-box;
  width: 40px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.recipeDetail_date_box {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.recipeDetail_date {
  width: 150px;
  font-size: 14px;
  color: #666666;
}
.recipeDetail_date_text {
  font-weight: 700;
  letter-spacing: 1px;
  color: #333333;
}
.recipeDetail_info {
  height: 40px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.menu_nz {
  width: 28px;
  height: 28px;
}

/* 提示 */
.tips_box {
  box-sizing: border-box;
  width: 100%;
  margin: 10px 0;
  padding: 10px;
  line-height: 30px;
  letter-spacing: 2px;
  font-size: 14px;
  color: #333333;
  background-color: #FFFFFF;
}
.tips_title {
  height: 40px;
  line-height: 40px;
  color: #4545FF;
  font-size: 16px;
  font-weight: 700;
  letter-spacing: 3px;
}

/* 食材 */
.major_box {
  margin: 10px 0;
  padding: 10px;
  background-color: #FFFFFF;
}
.major_item {
  box-sizing: border-box;
  padding: 0 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.major_title {
  height: 40px;
  line-height: 40px;
  letter-spacing: 1px;
  font-size: 14px;
  font-weight: 700;
  color: #222222;
}
.major_note {
  height: 40px;
  line-height: 40px;
  letter-spacing: 1px;
  font-size: 14px;
  font-weight: 700;
  color: #555555;
}

/* 步骤 */
.step_box {
  margin: 10px 0;
  padding: 0 10px;
  background-color: #FFFFFF;
}
.step_title {
  line-height: 30px;
  letter-spacing: 1px;
  font-size: 14px;
  font-weight: 700;
  color: #222222;
}