.relative {
  position: relative;
}

.page_top {
  width: 100vw;
  height: 38vh;
  background: -webkit-linear-gradient(top, #A084F1, #CA85D6);
  display: flex;
  flex-flow: column;
  justify-content: flex-start;
  align-items: center;
  padding-top: 10vh;
}
.logo_box {
  width: 180rpx;
  height: 180rpx;
}
.logo_img {
  width: 100%;
  height: 100%;
}

.page_center {
  width: 90vw;
  height: 260px;
  position: absolute;
  top: 18vh;
  left: 5vw;
  border-radius: 20px;
  padding: 20px 20px;
  box-shadow: 0px 2px 2px #999999;
}

.login_name {
  width: 100%;
  background-color: #F9F9F9;
  height: 40px;
}
.login_text {
  width: 50%;
  background-color: #F9F9F9;
  height: 40px;
}
.login_name_icon {
  width: 50px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.login_name_icon_img {
  width: 18px;
  height: 18px;
}
.sign_up_btn {
  width: 90%;
  height: 40px;
  color: #FFFFFF;
  margin-left: 5%;
  line-height: 40px;
  text-align: center;
  border-radius: 20px;
  letter-spacing: 5px;
  background: -webkit-linear-gradient(left, #9F83F2, #D38ADC);
}

.to_login {
  margin-top: 150px;
}

.van-cell {
  padding: 0 !important;
}

