.relative {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #FFF;
}
.logo_text {
  font-size: 26px;
  letter-spacing: 2px;
  color: #FFF;
}

.page_top {
  box-sizing: border-box;
  width: 100vw;
  height: 38vh;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 2vh;
  background: -webkit-linear-gradient(top, #A084F1, #CA85D6);
}
.logo_box {
  width: 180rpx;
  height: 180rpx;
}
.logo_img {
  width: 100%;
  height: 100%;
}

.page_center {
  box-sizing: border-box;
  width: 90vw;
  height: 280px;
  position: absolute;
  top: 30vh;
  left: 5vw;
  border-radius: 10px;
  padding: 20px 20px;
  box-shadow: 0px 2px 2px #CCCCCC;
  background-color: #FFFFFF;
}

.login_name {
  width: 100%;
  height: 40px;
  display: flex;
  flex-flow: row;
  justify-content: flex-start;
  align-items: center;
}
.login_text {
  width: 50%;
  height: 40px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #4545FF;
  font-size: 12px;
  letter-spacing: 2px;
  margin-top: 20px;
}
.login_name_icon {
  width: 50px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.login_name_icon_img {
  width: 18px;
  height: 18px;
}

.sign_up_btn {
  box-sizing: border-box;
  width: 184px;
  height: 40px;
  margin: 20px auto 0px;
  padding-left: 5px;
  font-size: 18px;
  font-weight: 700;
  line-height: 40px;
  text-align: center;
  border-radius: 5px;
  letter-spacing: 5px;
  color: #FFFFFF;
  background-color: #4545FF;
}

.to_register {
  margin-top: 220px;
}

.van-cell {
  padding: 0 !important;
}

