page {
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  background:#ececec;
}
.heading {
  text-align: center;
  font-size: 7em;
  line-height: 1.3em;
  padding: 0;
  text-shadow: 0 0 1rem #fefefe;
  font-family:Arial;
  background: linear-gradient(to right, #9F83F2, #D38ADC);
  -webkit-background-clip: text;
  color: transparent;
}
.heading2 {
  text-align: center;
  font-size: 1.5em;
  line-height: 1.3em;
  margin: 1rem 0 1rem 0;
  padding: 0;
  text-shadow: 0 0 1rem #fefefe;
  font-family:Arial;
  background: linear-gradient(to right, #9F83F2, #D38ADC);
  -webkit-background-clip: text;
  color: transparent;
  font-weight: 700;
}
.reload-button {
  width: 100px;
  text-align: center;
  background: #FFFFFF;
  padding: 8px 16px;
  cursor: pointer;
  border: 2px solid;
  border-image: -webkit-linear-gradient(  #9F83F2, #D38ADC) 30 30;
  border-image: -moz-linear-gradient(  #9F83F2, #D38ADC) 30 30;
  border-image: linear-gradient(  #9F83F2, #D38ADC) 30 30;
  border-radius: 5px;
  background: linear-gradient(to right, #9F83F2, #D38ADC);
  -webkit-background-clip: text;
  color: transparent;
  font-weight: 600;
  transition: transform 0.1s;
  user-select: none;
  margin-top: 60px;
}
.reload-button:hover {
  transform: translate(0, -2px);
  box-shadow: 0 2px 7px rgba(0, 0, 0, 0.1);
}
.reload-button a{color:#4545FF;text-decoration:none;}
.animation-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.wrapper {
  position: relative;
  width: 200px;
  height: 200px;
  margin: 1rem 0 0 0;
}
.rocket {
  transform: translate(-50px, 30px);
}
.stars {
  transform: translate(50px, -30px);
}
.rocket.animated,
.stars.animated {
  animation: transform-zero-animation 0.75s cubic-bezier(0.215, 0.61, 0.355, 1) forwards 1;
}
@keyframes transform-zero-animation {
  100% {
    transform: translate(0, 0) translateZ(0);
  }
}