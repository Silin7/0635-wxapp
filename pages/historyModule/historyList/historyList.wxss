/* 子模块03 */
.sub_module2 {
  padding: 10px;
  display: flex;
  justify-content: space-between;
}
.sub_module2_left {
  width: 48%;
}
.sub_module2_right {
  width: 48%;
}
.sub_module2_02 {
  width: 100%;
  height: 180px;
  border-radius: 10px;
  overflow: hidden;
  position: relative;
}
.item_banner_mask1 {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 180px;
  background-color: #000000;
  opacity: 0.3;
}
.item_banner_text2 {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 180px;
  line-height: 180px;
  color: #FFFFFF;
  font-size: 18px;
  font-weight: 700;
  text-align: center;
  letter-spacing: 5px;
  z-index: 1;
  padding-left: 5px;
}
