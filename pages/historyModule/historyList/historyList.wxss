.history_box {
  padding: 0 10px;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.history_item {
  flex-shrink: 0;
  overflow: hidden;
  margin: 10px 0;
  width: 48%;
  height: 180px;
  border-radius: 5px;
  position: relative;
}
.item_banner_mask1 {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 180px;
  background-color: #000000;
  opacity: 0.3;
}
.item_banner_text2 {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 180px;
  line-height: 180px;
  color: #FFFFFF;
  font-size: 22px;
  font-weight: 700;
  text-align: center;
  letter-spacing: 5px;
  z-index: 1;
  padding-left: 5px;
}