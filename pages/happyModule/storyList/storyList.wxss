/* 笑话 */
.story_box {
  box-sizing: border-box;
  width: 100vw;
  min-height: 100vh;
  padding: 5px;
  /* background-color: #F7F8FA; */
}
.transition_box {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.transition_img {
  width: 15px;
  height: 15px;
}
.rich_box {
  box-sizing: border-box;
  padding: 10px;
  margin: 10px 0;
  border: 2px dashed #DEDEDE;
}
.rich_text {
  line-height: 30px;
  font-size: 16px;
  letter-spacing: 1px;
}
.story_epilogue {
  height: 40px;
  font-size: 12px;
  letter-spacing: 1px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #999999;
}

/* 图片 */
.content_box {
  box-sizing: border-box;
  padding: 5px;
  margin: 10px 0;
  border: 2px dashed #DEDEDE;
}
.story_title {
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  letter-spacing: 1px;
}
.story_url {
  display: inline-block;
  width: 100%;
  height: 300px;
}

/* 视频 */
.save_video {
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18px;
  letter-spacing: 2px;
  font-weight: 700;
  color: #4545FF;
}

/* dialog */
.van-button__text {
  color: #4545FF !important;
}