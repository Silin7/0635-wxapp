.page_box {
  box-sizing: border-box;
  width: 100vw;
  padding: 10px;
  overflow-y: auto;
}
.keep_diary {
  height: 40px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 14px;
  font-weight: 700;
  color: #4545FF;
}
.diary_item {
  box-sizing: border-box;
  margin: 10px auto;
  padding: 10px;
  height: 130px;
  width: 100%;
  border: 1rpx dashed red;
  border-radius: 10px;
  overflow: hidden;
}
.item_top {
  box-sizing: border-box;
  padding: 0 10px;
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
  font-weight: 700;
  color: #333333;
}
.item_content {
  font-size: 14px;
  color: #333333;
  text-indent: 28px;
  line-height: 25px;
}