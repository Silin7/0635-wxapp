
.page_top {
  box-sizing: border-box;
  padding: 0 10px 0 5px;
  width: 100vw;
  height: 60px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
  font-weight: 700;
  color: #333333;
}

.top_item {
  height: 40px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.top_item_img {
  width: 38px;
  height: 38px;
}

.page_center {
  box-sizing: border-box;
  width: 98vw;
  border: 1rpx dashed #F5F5F5;
  margin: 0 auto;
  
}
.page_center textarea {
  font-size: 14px;
  font-weight: 700;
  line-height: 20px;
  letter-spacing: 2px;
  color: #555555;
  min-height: 400px;
}


.sign_up {
  box-sizing: border-box;
  height: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 15px 10px;
}
.sign_up_btn {
  width: 80%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  letter-spacing: 3px;
  border-radius: 20px;
  background: -webkit-linear-gradient(left, #9A93F3, #D58BBC);
  font-weight: bold;
  color: #FFFFFF;
}