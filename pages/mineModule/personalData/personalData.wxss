.personal_box {
  position: relative;
}
.head_portrait_box {
  display: flex;
  flex-flow: column;
  justify-content: space-around;
  align-items: center;
  height: 160px;
}
.head_portrait {
  width: 100px;
  height: 100px;
  border-radius: 20px;
  position: relative;
}
.head_portrait_age {
  box-sizing: border-box;
  width: 40px;
  height: 25px;
  padding: 2px;
  position: absolute;
  right: -20px;
  bottom: 0;
  z-index: 99;
  background-color: #FFFFFF;
  border-radius: 5px;
}
.head_portrait_age_text {
  display: block;
  width: 36px;
  height: 21px;
  line-height: 21px;
  text-align: center;
  font-size: 14px;
  font-weight: 700;
  color: #FFFFFF;
  background-color: #4545FF;
  border-radius: 5px;
}
.head_portrait_text {
  height: 38px;
  width: 150px;
  background: #4545FF;
  border-radius: 8px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #FFFFFF;
  font-weight: 700;
}

.information_box {
  overflow-y: auto;
  padding: 10px 20px;
}
.information_item {
  height: 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.information_item_text {
  width: 80px;
}
.information_item_text2 {
  width: 80px;
}

.information_item_radio_group {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-right: 20%;
}

.sign_up {
  box-sizing: border-box;
  height: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 20px 10px;
}
.sign_up_btn {
  box-sizing: border-box;
  width: 100%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  padding-left: 20px;
  letter-spacing: 20px;
  border-radius: 5px;
  font-weight: bold;
  color: #FFFFFF;
  background-color: #4545FF;
}

.van-field__body {
  width: 68vw;
  letter-spacing: 1px;
}
.color_45 .van-field__placeholder {
  color: #4545FF !important;
}
