<van-toast id="van-toast" />
<van-dialog id="van-dialog" />
<component-loading wx:if="{{isLoading}}"/>

<!-- 关注 -->
<view class="follow_list bs_bb" style="height: {{windowHeight-44}}px" wx:if="{{type == '01'}}">
  <view class="follow_item m_b_10" wx:for="{{concernsList}}" wx:key="index" bindtap="myConcerns" data-item="{{item}}">
    <view class="follow_head_portrait">
      <van-image lazy-load width="100%" height="100%" src="{{item.photo}}" image-class="br_10"/>
    </view>
    <view class="follow_info_text" style="width: {{windowWidth-90}}px;">
      <view class="follow_name_personalSignature" style="width: {{windowWidth-180}}px;">
        <view class="follow_name">
          <view class="follow_name_text to_1 ls_2">{{item.nick_name}}</view>
        </view>
        <view class="follow_personalSignature to_1 fs_14 co_9 m_t_10">{{item.introduce}}</view>
      </view>
      <view class="follow_follow">
        <view catchtap="cancelFollow" data-item="{{item}}">取消关注</view>
      </view>
    </view>
  </view>
</view>

<!-- 收藏 -->
<view class="follow_list bs_bb" style="height: {{windowHeight-44}}px" wx:if="{{type == '02'}}">
  <view class="follow_item m_b_10" wx:for="{{collectionList}}" wx:key="index" bindtap="myCollection" data-item="{{item}}">
    <view class="follow_head_portrait">
      <van-image lazy-load width="100%" height="100%" src="{{item.menu_image}}" image-class="br_10"/>
    </view>
    <view class="follow_info_text" style="width: {{windowWidth-90}}px;">
      <view class="follow_name_personalSignature" style="width: {{windowWidth-180}}px;">
        <view class="follow_name">
          <view class="follow_name_text to_1 ls_2">{{item.menu_name}}</view>
        </view>
        <view class="follow_personalSignature to_1 fs_14 co_9 m_t_10">{{item.menu_info}}</view>
      </view>
      <view class="follow_follow">
        <view catchtap="cancelFollow" data-item="{{item}}">取消收藏</view>
      </view>
    </view>
  </view>
</view>