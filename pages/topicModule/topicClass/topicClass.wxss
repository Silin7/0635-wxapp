/* 家乡话题 */
.topic_title {
  box-sizing: border-box;
  height: 40px;
  padding: 0 10px;
  line-height: 40px;
  font-size: 14px;
  font-weight: 700;
  letter-spacing: 2px;
  color: #666666;
}
.topic_box {
  box-sizing: border-box;
  width: 100%;
  padding: 0px 10px;
  overflow-x: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.topic_item {
  flex-shrink: 0;
  width: 31%;
  height: 80px;
  margin-top: 10px;
  box-sizing: border-box;
  border-radius: 5px;
  overflow: hidden;
  position: relative;
}
.topic_item_banner_mask {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: #000000;
  opacity: 0.3;
}
.topic_item_banner_text {
  position: absolute;
  bottom: 25px;
  right: 0;
  z-index: 999;
  box-sizing: border-box;
  padding-left: 8px;
  width: 100%;
  height: 30px;
  line-height: 30px;
  color: #FFFFFF;
  font-size: 16px;
  font-weight: 700;
  text-align: center;
  letter-spacing: 8px;
}

.topic_class_item {
  box-sizing: border-box;
  width: 100%;
  padding-bottom: 10px;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #F7F8FA;
}
.topic_class_item_img {
  width: 100px;
  height: 60px;
  box-sizing: border-box;
  border-radius: 5px;
  overflow: hidden;
}
.topic_class_item_text {
  display: flex;
  flex-flow: column;
  justify-content: space-between;
}
.topic_class_item_text_title {
  width: 100%;
  height: 35px;
  line-height: 35px;
  font-size: 14px;
  font-weight: 700;
  letter-spacing: 1px;
  color: #333333;
}
.topic_class_item_text_txt {
  width: 100%;
  height: 25px;
  line-height: 25px;
  font-size: 12px;
  letter-spacing: 1px;
  color: #666666;
}