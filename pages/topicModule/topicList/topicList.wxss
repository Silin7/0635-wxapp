.topic_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 5px 20px;
  background-color: #FFFFFF;
}
.topic_info_img {
  width: 100px;
  height: 100px;
  border-radius: 5px;
  overflow: hidden;
}
.topic_info_box {
  height: 100px;
}
.name_follow {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.personal_info2_right_follow {
  height: 30px;
  width: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: -webkit-linear-gradient(left, #A084F1, #CA85D6);
  letter-spacing: 2px;
  color: #FFFFFF;
  font-size: 14px;
  border-radius: 5px;
}
.topic_info_text {
  height: 40px;
  line-height: 20px;
}

.topic_list {
  width: 100%;
  padding: 10px;
}
.sub_module1 {
  display: flex;
  justify-content: flex-start;
}
.sub_module1_item_fd_02 {
  width: 60px;
  height: 60px;
  box-sizing: border-box;
  border-radius: 5px;
  overflow: hidden;
  position: relative;
}
.sub_module1_item_fd_info {
  height: 60px;
}
.sub_module1_item_fd_info_item {
  height: 30px;
  line-height: 30px;
}
.sub_module1_item_fd_info_item2 {
  width: 100%;
  height: 30px;
  line-height: 30px;
  display: flex;
  justify-content: flex-start;
}